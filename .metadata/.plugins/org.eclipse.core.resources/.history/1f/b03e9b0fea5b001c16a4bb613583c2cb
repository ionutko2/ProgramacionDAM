
import java.util.Scanner;

public class Examen1_4 {
	public static void main(String[] args) {
		Scanner teclado = new Scanner(System.in);
		String direccion = "";
		String partelocal = "";
		String dominio = "";
		int atsign = 0;
		int tamaño = 0;
		int tamañop;
		int tamañod;
		boolean restriccion = true;
		int ascii1;
		int ascii2;

		// Leer dirección de correo
		System.out.println("Escriba su dirección de correo electrónico");
		direccion = teclado.nextLine();

		// Dividir la parte local y el dominio
		tamaño = direccion.length() - 1;
		atsign = direccion.indexOf("@");
		partelocal = direccion.substring(0, atsign);
		dominio = direccion.substring(atsign + 1, tamaño);
		tamañop = partelocal.length();
		tamañod = dominio.length();

		// Restricciones
		if (direccion.length() <= 254) {
			if (partelocal.length() <= 64) {
				if (dominio.length() <= 255) {
					for (int i = 0; i < tamañop; i++) {
						ascii2 = partelocal.charAt(i);
						if (i == 0 && ascii2 == '.') {
							restriccion = false;
						}
						if (ascii2 == '.') {
							if (partelocal.charAt(i + 1) == '.') {
								restriccion = false;
							}
						}
					
						if ((ascii2 >= 'A' && ascii2 <= 'Z') || (ascii2 >= 'a' && ascii2 <= 'z')
							|| (ascii2 >= '0' && ascii2 <= '9') || (ascii2 == '.')) {
						}else {
							restriccion = false;
						}
					}
						for (int j = 0; j <= tamañod; j++) {
							System.out.println("El tamaño es " + tamañod);
							System.out.println("prueba " + 8);
							ascii1 = dominio.charAt(j);
							System.out.println(dominio.charAt(j));
							if (j == (tamañod - 1) && ascii1 == '.') {
								restriccion = false;
							}
							if (ascii1 == '.') {
								if (dominio.charAt(j + 1) == '.') {
									restriccion = false;
								}
							}
							if ((ascii1 >= 'A' && ascii1 <= 'Z') || (ascii1 >= 'a' && ascii1 <= 'z')
									|| (ascii1 >= '0' && ascii1 <= '9') || (ascii1 == '.')) {
							} else {
								restriccion = false;
							}
							System.out.println(restriccion);
						}
					}else {
						restriccion = false;
					}
				} else {
					restriccion = false;
				}
			} else {
				restriccion = false;
			}
 
		if (restriccion == true) {
			System.out.println("El correo es correcto");
		} else {
			System.out.println("El correo es incorrecto");
		}
	}
}